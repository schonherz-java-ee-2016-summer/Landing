<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

        <persistence-unit name="hu.schonherz.project.landing">

                <provider>org.hibernate.ejb.HibernatePersistence</provider>
                <non-jta-data-source>java:comp/env/jdbc/LandingJpa</non-jta-data-source>
                <class>hu.schonherz.training.landing.core.entity.BaseEntity</class>
                <class>hu.schonherz.training.landing.core.entity.Role</class>
                <class>hu.schonherz.training.landing.core.entity.User</class>

                <exclude-unlisted-classes>true</exclude-unlisted-classes>

                <properties>
                        <property name="hibernate.show_sql" value="true" />
                        <property name="hibernate.format_sql" value="true" />
                        <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
                        <property name="hibernate.hbm2ddl.auto" value="update" />
                        <property name="hibernate.default_schema" value="public"/>
                        <property name="hibernate.hbm2ddl.import_files" value="create.sql"/>
                </properties>

        </persistence-unit>

</persistence>
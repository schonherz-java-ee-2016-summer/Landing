<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

        <persistence-unit name="hu.schonherz.training.landing"
                          transaction-type="JTA">
                <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
                <jta-data-source>java:jboss/datasources/Landing</jta-data-source>
                <class>hu.schonherz.training.landing.core.entity.BaseEntity</class>
                <class>hu.schonherz.training.landing.core.entity.User</class>
                <class>hu.schonherz.training.landing.core.entity.Role</class>
                <class>hu.schonherz.training.landing.core.entity.Permission</class>

                <exclude-unlisted-classes>true</exclude-unlisted-classes>

                <properties>
                        <property name="hibernate.show_sql" value="true" />
                        <property name="hibernate.format_sql" value="true" />
                        <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL94Dialect" />
                        <property name="hibernate.hbm2ddl.auto" value="create" />
                        <property name="hibernate.default_schema" value="public" />
                        <property name="hibernate.hbm2ddl.import_files" value="create.sql"/>
                        <property name="hibernate.transaction.jta.platform"
                                  value="org.hibernate.service.jta.platform.internal.JBossAppServerJtaPlatform" />
                        <property name="hibernate.ejb.entitymanager_factory_name"
                                  value="EntityManagerJNDI" />
                        <property name="hibernate.connection.useUnicode" value="true"/>
                        <property name="hibernate.connection.characterEncoding"
                                  value="UTF-8"/>
                        <property name="hibernate.connection.charSet" value="UTF-8"/>
                </properties>

        </persistence-unit>
</persistence>
